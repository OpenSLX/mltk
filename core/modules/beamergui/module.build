#!/bin/bash

fetch_source() {
	autoclone
}

build() {
	local SRCDIR="${MODULE_WORK_DIR}/src/beamergui"

	mkdir -p "$MODULE_BUILD_DIR/opt/openslx/bin"
	cd "${MODULE_BUILD_DIR}/opt/openslx/bin" || perror "Could not cd!"
	pinfo "Running cmake"
	cmake "$SRCDIR" || perror "'cmake $SRCDIR' failed."
	pinfo "Running make"
	make || perror "'make' failed."
}
post_copy() {
	:
}
